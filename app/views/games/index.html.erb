<div class="search">
  <%= form_tag( games_search_path , remote: true) do %>
    <div class="field">
      <%= label_tag :genre, "Genre: " %></div>
    
      <%= select_tag :genre, options_from_collection_for_select(@genres.to_a.unshift(Genre.new(id: 0, name: "All")), "name", "name", "0") %>
      <%= label_tag :order, "Game order" %>
      <%= select_tag :order, options_for_select(["A-Z", "Z-A", "Highest Rating","Lowest Rating", "Newest First", "Oldest First"]), {include_blank: "Order"} %>
    </div>
  <% end %>
</div>




<% @genres.each do |genre|%>
  <h1><%= genre.name%></h1>
  <% genre.games.each do |game|%> 
    <p><%=link_to image_tag(game.thumbnail), game%></p>
  <% end %>
<% end %>